  <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin.css" rel="stylesheet">

</head>

<body id="page-top">

  <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

    <a class="navbar-brand mr-1" href="/">TEAMPALAK</a>

    <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
      <i class="fas fa-bars"></i>
    </button>

    <!-- Navbar Search -->
    <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
    </form>

    <!-- Navbar -->
    <ul class="navbar-nav ml-auto ml-md-0">
      <li class="nav-item dropdown no-arrow">
        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-user-circle fa-fw"></i>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
          <!--
          <a class="dropdown-item" href="#">Change Password</a>
          <div class="dropdown-divider"></div>
          -->
          <!-- <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a> -->
          <a class="dropdown-item" href="/logout">Logout</a>
        </div>
      </li>
    </ul>

  </nav>

  <div id="wrapper">

    <!-- Sidebar -->
    <ul class="sidebar navbar-nav">
      <li class="nav-item">
        <a class="nav-link" href="/">
          <i class="fas fa-fw fa-home"></i>
          <span>Home</span>
        </a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/tournaments">
          <i class="fas fa-fw fa-trophy"></i>
          <span>Tournaments</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/announcements">
          <i class="fas fa-fw fa-bullhorn"></i>
          <span>Announcements</span></a>
      </li>
    </ul>

    <div id="content-wrapper">
      <div class="container-fluid2">
        <div class="card mb-3">
          <div class="card-header">
            <i class="fas fa-pen"></i>
            Edit Tournament
          </div>
          <form action="/updatetournament" method="POST">
          <div class="card-body">
            <div class="form-group">
              <h6>Tournament Name</h6>
              <input type="text" name="TournamentName" maxlength="45" class="form-control" value="<%= data[0].TournamentName %>" required>
            </div>
            <div class="form-group">
              <h6>Game</h6>
              <div class="radio">
                <% if(data[0].TournamentGame == "LoL") { %>
                  <label><input type="radio" name="TournamentGame" value="LoL" checked="checked" required> League of Legends (LoL)</label>
                <% } else { %>
                  <label><input type="radio" name="TournamentGame" value="LoL" required> League of Legends (LoL)</label>
                <% } %>
              </div>
              <div class="radio">
                <% if(data[0].TournamentGame == "DotA 2") { %>
                  <label><input type="radio" name="TournamentGame" value="DotA 2" checked="checked"> Defense of the Ancients 2 (DotA 2)</label>
                <% } else { %>
                  <label><input type="radio" name="TournamentGame" value="DotA 2"> Defense of the Ancients 2 (DotA 2)</label>
                <% } %>
              </div>
              <div class="radio">
                <% if(data[0].TournamentGame == "CS:GO") { %>
                  <label><input type="radio" name="TournamentGame" value="CS:GO" checked="checked"> Counter-Strike: Global Offensive (CS:GO)</label>
                <% } else { %>
                  <label><input type="radio" name="TournamentGame" value="CS:GO"> Counter-Strike: Global Offensive (CS:GO)</label>
                <% } %>
              </div>
            </div>
            <div class="form-group">
              <h6>Venue</h6>
              <input type="text" name="TournamentVenue" maxlength="45" class="form-control" value="<%= data[0].TVenue %>" required>
            </div>      
            
              <div class="form-row">
                <div class="col-md-6">
                  <div class="form-group">
                    <h6>Date</h6>
                    <input type="date" name="tDate" value="<%= data[0].tDate %>" class="form-control form-rounded" required>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <h6>Time</h6>
                    <input type="time" name="tTime" class="form-control form-rounded" value="<%= data[0].tTime %>" required>
                  </div>
                </div>
              </div>
            
            <div class="form-row">
              <div class="col-md-6">
                <div class="form-group">
                  <h6>Registration Fee</h6>
                  <input type="number" name="Price" value="<%= data[0].registration_fee %>" min="0" step="0.10" data-number-to-fixed="2" data-number-stepfactor="100" class="form-control form-rounded" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <h6>Max No. of Teams</h6>
                  <input type="number" name="MaxParticipants" value="<%= data[0].Max_participants %>" min="1" class="form-control form-rounded" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <h6>Picture</h6>
              <input type="file" name="TournamentPicture" accept="image/png,image/jpeg">
            </div>
          </div>
          <div class="modal-footer">
            <a href="/tournaments" class="btn btn-default">Cancel</a>
            <input type="hidden" name="TournamentID" value="<%= data[0].TournamentID %>">
            <input type="submit" class="btn btn-success" value="Save">
          </form>
          </div>
        </div>
      </div>
    </div>
    

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright © TeamPalak - 2019</span>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
