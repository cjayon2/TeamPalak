          <input type="password" placeholder="Enter new Password" name="newPwd">
          <h6>Confirm New Password:</h6>
          <input type="password" placeholder="Confirm new Password" name="conPwd">

          <div class="games">
            <h1 id="game">Game ID's</h1>
            <label>Leage of Legends:</label>
            <input type="text" placeholder="League of Legends" name="lol">
            <br>
            <label>Counter Strike: Global Offensive:</label>
            <input type="text" placeholder="Counter Strike: Global Offensive" name="csgo">
            <br>
            <label>Dota 2:</label>
            <input type="text" placeholder="DotA 2" name="dota2">
          </div>
          <br>
          <p><b>Verify Changes by entering the old password.</b></p>
          <h6>Old Password:</h6>
          <input type="password" placeholder="Enter old Password" name="oldPwd" required>
          
          <br><br>
          <button class="btn btn-inverse" type="submit">Save</button>
        </div>
      </form>
