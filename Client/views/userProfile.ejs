   <section id="maincontent">
    <div class="container">
      <div class="row">
        <div class="span12">
  <div class="editpage">
    <div class="form">
      <form action="/userProfile" method="post">
        <div class="UserImage">
          <% for(var index = 0; index < data.length; index++){ %>
          
              <img src="data:image/jpeg; base64, <%=new Buffer(data[index].Image,'binary').toString('base64')%>"  alt="Profile Pic" class="imgprof" style="width: 200px; height: 200px;">
          
              
        
          <h1> <%= name%> </h1>
        </div>
          <h3><b>Username: </b> <%= user%> </h3>
          <h4><b>Team name: </b> <%= data[index].TeamName%> </h4>
          <h5>Total accomulated points: <%= data[index].rewardPoints%></h5>
          <%}%>
          <h3>History</h3>

            
            <div class="row-fluid">
              <ul class="portfolio-area da-thumbs">     
                <% for(var index = 0; index < ctr.length; index++){ %>
                <li>
                  <div class="col">
                    <div class="thumbnail">
                      <div class="tooltip-demo image-wrapp">
                        <img src="data:image/jpeg; base64, <%=new Buffer(ctr[index].Tpic,'binary').toString('base64')%>" alt="">
                        <div class="caption">
                          <h3>
                          
                            <%= ctr[index].TournamentName.substring(0,11) %>
                          </h3>
                          <p>No. of participants :  <%= ctr[index].Max_participants%>
                          <br> Game: <%= ctr[index].TournamentGame%>
                          <br> Registration price: <%= ctr[index].registration_fee%>
                          </p><br> 
                          <p><a data-toggle="modal" href="#myModal<%=index%>" class="btn btn-success">More Info</a></p>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
                <% } %>
              </ul>
            </div>
    
        </div>
      </form>
    </div>
  </div>
  </div>
  </div>
  </section>
  <% for(var index = 0; index < ctr.length; index++){ %>
  <div id="myModal<%=index%>" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h3 id="myModalLabel"><center><%= ctr[index].TournamentName %></center></h3>
            </div>
      <div class="modal-body">
        <h4>Game: <%= ctr[index].TournamentGame%></h4>
        <p>No. of participants :  <%= ctr[index].Max_participants%>
          <br> Slots Left: 
          <br> Registration price: <%= ctr[index].registration_fee%>
          <br> Venue: <%= ctr[index].TVenue%>
          <br> Date: <%= ctr[index].TSched.toDateString()%>
          
          <br> Time: <%= ctr[index].TSched.toLocaleTimeString('en-US', 
                  { hour12: true, 
                    hour: "numeric", 
                    minute: "numeric"});%>
        </p>
        <hr>
        <h4>Bracketing</h4>
        <hr>
        <h4>Winners:</h4>
        <hr>
      </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal">Close</button>
    </div>
  </div>
<% } %>
